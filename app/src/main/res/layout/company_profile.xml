<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.company.CompanyFragment"
    android:background="@color/background_color"
    style="@style/Theme.RecoopeMobile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recoope_primary_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/topBarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Perfil da Empresa"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/companyName">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Company"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
            app:layout_constraintStart_toStartOf="@+id/startGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <TextView
            android:id="@+id/companyCNPJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.000.000/0000-00"
            android:textColor="#000"
            android:textSize="9sp"
            app:layout_constraintEnd_toStartOf="@+id/endGuideLine"
            app:layout_constraintStart_toStartOf="@+id/startGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/companyName" />

        <LinearLayout
            android:id="@+id/companyInfoLayout"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/sair"
            app:layout_constraintEnd_toStartOf="@id/endGuideLine"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/startGuideLine"
            app:layout_constraintTop_toBottomOf="@id/companyCNPJ">

            <androidx.cardview.widget.CardView style="@style/Theme.RecoopeMobile.CompanyCardInfo">

                <LinearLayout style="@style/Theme.RecoopeMobile.CompanyCardLayout">

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="E-mail"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="company@email.com" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/Theme.RecoopeMobile.CompanyCardInfo">

                <LinearLayout style="@style/Theme.RecoopeMobile.CompanyCardLayout">

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="Telefone"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="(00) 00000-0000" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/Theme.RecoopeMobile.CompanyCardInfo">

                <LinearLayout style="@style/Theme.RecoopeMobile.CompanyCardLayout">

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="Endereço"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="R. Exemplo da Silva - Parque 007, São Paulo - SP, 05120-060" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/Theme.RecoopeMobile.CompanyCardInfo">

                <LinearLayout style="@style/Theme.RecoopeMobile.CompanyCardLayout">

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="Tempo Conosco"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="00 anos" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/Theme.RecoopeMobile.CompanyCardInfo">

                <LinearLayout style="@style/Theme.RecoopeMobile.CompanyCardLayout">

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="Leilões Participados"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Theme.RecoopeMobile.CompanyCardText"
                        android:text="00 Leilões" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/sair"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Sair"
            android:textColor="@color/white"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/recoope_red_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/endGuideLine"
            app:layout_constraintStart_toEndOf="@id/startGuideLine"
            app:layout_constraintTop_toBottomOf="@id/companyInfoLayout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.92" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>