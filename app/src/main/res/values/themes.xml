<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RecoopeMobile" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="colorPrimary">@color/white</item>
         <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="Theme.RecoopeMobile" parent="Base.Theme.RecoopeMobile">
        <item name="background">@color/background_color</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.RecoopeMobile.FilterButton" parent="Base.Theme.RecoopeMobile">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginStart">2.5dp</item>
        <item name="android:layout_marginEnd">2.5dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Company Styles  -->
    <style name="Theme.RecoopeMobile.ProfileCardInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Theme.RecoopeMobile.ProfileCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="Theme.RecoopeMobile.ProfileCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Calendar Styles -->
    <style name="Theme.RecoopeMobile.WeekDay">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>