<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecoopeMobile" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
         <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="Theme.RecoopeMobile" parent="Base.Theme.RecoopeMobile">
        <item name="background">@color/background_color</item>
        <item name="fontFamily">@font/bree_serif</item>
    </style>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.RecoopeMobile.FilterButton" parent="Base.Theme.RecoopeMobile">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTint">#FFF</item>
        <item name="android:fontFamily">@font/bree_serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">2.5dp</item>
        <item name="android:layout_marginEnd">2.5dp</item>
        <item name="android:layout_marginVertical">20dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

